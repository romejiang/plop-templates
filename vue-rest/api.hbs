import request from '@/utils/request'
// ====================================
// ====================================
//  {{ properCase name }} api
// ====================================
// ====================================
/**
 * 获取对象列表
 */
export function list(query) {
  return request({
    url: '/{{ name }}',
    method: 'get',
    params: query
  })
}
/**
 * 获取登录用户的列表，JWT
 */
export function mine(query) {
  return request({
    url: '/{{ name }}/mine',
    method: 'get',
    params: query
  })
}
/**
 * 通过ID获取对象
 */
export function get(id) {
  return request({
    url: '/{{ name }}/' + id,
    method: 'get'
  })
}
/**
 * 添加对象
 */
export function create(data) {
  return request({
    url: '/{{ name }}',
    method: 'post',
    data
  })
}
/**
 * 更新对象
 */
export function update(id, data) {
  return request({
    url: `/{{ name }}/${id}`,
    method: 'put',
    data
  })
}
/**
 * 删除对象
 */
export function delete(id) {
  return request({
    url: `/{{ name }}/${id}`,
    method: 'delete'
  })
}


export default {
  list,
  mine,
  get,
  create,
  update,
  delete
}
